@model HungPhoneShop.Controllers.ManageUserRolesViewModel

<h2>Manage Roles for @Model.Email</h2>

<form asp-action="ManageRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group">
        <h4>Roles</h4>
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="Roles[i].RoleName" />
                <input class="form-check-input" type="checkbox" asp-for="Roles[i].IsSelected" />
                <label class="form-check-label" asp-for="Roles[i].IsSelected">
                    @Model.Roles[i].RoleName
                </label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>